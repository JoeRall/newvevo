@{
    ViewBag.Title = "Home Page";
}

<div ng-controller="mainCtrl" ng-cloak>
    <div class="jumbotron">
        <div class="new-user" ng-show="IsNewUser">
            <h1 class="text-center">New Vevo</h1>
            <p class="lead text-center">New Videos. No Ads. All Awesome.</p>

            <p class="text-center">
                <input id="userTB" class="text-center" placeholder="User Name" />
            </p>

        </div>

        <div class="existing-user" ng-show="IsExistingUser">
            <h3>{{CurrentVideo.Title}} by {{CurrentVideo.Artist}}</h3>

            <video id="thePlayer" width="640" height="480" controls>
                @*<source ng-repeat="s in ActiveStreams" src="{{s.Url}}" type="video/mp4">*@
                your browser does not support the video tag.
            </video>
            <br />
            <i class="fa fa-3x fa-random" ng-click="Next()"></i>
        </div>
    </div>
</div>


@section scripts {
    <script type="text/javascript">

        $('#userTB').keypress(function (e) {
            if (e.which == 13) {
                location = "/u/" + $('#userTB').val();
            }
        });
    </script>
}